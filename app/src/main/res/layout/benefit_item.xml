<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/benefit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_logoBenefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        app:cardCornerRadius="@dimen/size_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_logoBenefit"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_90"
            android:contentDescription="@string/description_logo"
            android:src="@drawable/movimente_logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nameBenefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:fontFamily="@font/montserrat__bold"
        android:text="@string/benefit_name"
        android:textColor="@color/blue_zup"
        android:textSize="@dimen/fontSize_14"
        app:layout_constraintEnd_toEndOf="@id/cv_logoBenefit"
        app:layout_constraintStart_toStartOf="@id/cv_logoBenefit"
        app:layout_constraintTop_toBottomOf="@id/cv_logoBenefit" />

</androidx.constraintlayout.widget.ConstraintLayout>