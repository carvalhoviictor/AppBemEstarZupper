<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10">

    <ImageView
        android:id="@+id/iv_logoBenefit"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/margin_10"
        android:contentDescription="@string/description_logo"
        android:src="@drawable/movimente_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nameBenefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:fontFamily="@font/montserrat__bold"
        android:text="@string/movi_mente"
        android:textColor="@color/blue_zup"
        android:textSize="@dimen/fontSize_14"
        app:layout_constraintEnd_toEndOf="@id/iv_logoBenefit"
        app:layout_constraintStart_toStartOf="@id/iv_logoBenefit"
        app:layout_constraintTop_toBottomOf="@id/iv_logoBenefit" />


</androidx.constraintlayout.widget.ConstraintLayout>